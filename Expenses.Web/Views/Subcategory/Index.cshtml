@model IEnumerable<Expenses.Web.Models.SubcategoryViewData>

@{
    ViewBag.Title = Strings.Subcategories;
}

<h2>@Strings.Subcategories</h2>

<p>
    @Html.ActionLink(@Strings.CreateNew, "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Strings.Name
        </th>
        <th>
            @Strings.Category
        </th>
        <th>
            @Strings.Comment
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(items => item.Id)
            </td>
            <td>
                @Html.DisplayFor(items => item.Name)
            </td>
            <td>
                @Html.DisplayFor(items => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(items => item.Comment)
            </td>
            <td>
                @HtmlHelpers.ItemOptions("Subcategory", item.Id)
            </td>
        </tr>
    }

</table>