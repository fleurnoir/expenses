@model IEnumerable<Expenses.BL.Entities.Currency>

@{
    ViewBag.Title = Strings.Currencies;
}

<h2>@Strings.Currencies</h2>

<p>
    @Html.ActionLink(Strings.CreateNew, "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Strings.Name
        </th>
        <th>
            @Strings.ShortName
        </th>
        <th>
            @Strings.Comment
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @HtmlHelpers.ItemOptions("Currency", item.Id)
            </td>
        </tr>
    }

</table>