@model IEnumerable<Expenses.Web.Models.AccountViewData>

@{
    ViewBag.Title = Strings.Accounts;
}

<h2>@Strings.Accounts</h2>

<p>
    @Html.ActionLink(Strings.CreateNew, "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Strings.Name
        </th>
        <th>
            @Strings.Amount
        </th>
        <th>
            @Strings.Currency
        </th>
        <th>
            @Strings.Comment
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(items => item.Id)
            </td>
            <td>
                @Html.DisplayFor(items => item.Name)
            </td>
            <td>
                @Html.DisplayFor(items => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(items => item.CurrencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a href="/Account/Edit/@item.Id"><img src="/Images/edit.png"/></a> |
                <a href="/Account/Details/@item.Id"><img src="/Images/details.png"/></a> |
                <a href="/Account/Delete/@item.Id"><img src="/Images/delete.png"/></a>
            </td>
        </tr>
    }

</table>